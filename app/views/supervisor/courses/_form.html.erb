
<%= simple_form_for [:supervisor, @course]  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%#= f.input :title %>
  <%= f.input :name, :label => "Enter course's name" %>
  <%= f.input :instruction, :label => "Enter course's intruction" %>

  <%= f.simple_fields_for :subject_courses do |fa| %>
    <%#= fa = fa.object.name.titleize %>
    <%= fa.input :course_id, as: :hidden %>
    <%= fa.input :subject_id, as: :hidden %>
    <%= fa.simple_fields_for :subjects do |subject_form| %>
      <%= subject_form.association :subjects, :as => :check_boxes %>
    <% end %>
  <% end %>
  <%= f.button :submit %>
<% end  %>
